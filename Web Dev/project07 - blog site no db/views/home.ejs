<%- include("partials/header") -%>

<h1>Home</h1>

<p> <%= homeContent %> </p>

<% posts.forEach(post => console.log(post)); %>

<% posts.forEach(function(post) { %>
  <div class="">
    <h1> <%= post.title %> </h1>

    <% if (post.body.length > 100) { %>
      <p> <%= post.body.substring(0, 100) + " ..." %> <a href="/posts/<%= post.title %>">Read more</a></p>
    <% } else { %>
      <p> <%= post.body %> <a href="/posts/<%= post.title %>">Read more</a> </p>
    <% } %>

  </div>
<% }); %>

<%- include("partials/footer") -%>
